group books_to_html_list;

HEADER() ::= <<
	<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
	<html>
	<head>
		<title>List of books</title>
	</head>
	<body>
>>

FOOTER() ::= "</body></html>"

MAIN(data) ::= <<
$HEADER()$

<table>
$data:{ record | 
	<tr>
	<td>record.isbn</td>
	<td>record.title</td>
	<td>record.author</td>
	</tr>
}$ 
</table>

$FOOTER()$
 >>

